{% extends 'base.html.twig' %}

{% block title %}Fiche cheval{% endblock %}

{% block body %}
<h1 class="pt-2 text-center">Fiche de produit</h1>
<hr>
            <th scope="col-4">Nom</th>
                <div class="col">
                        <div class="card-body">
                        <h3><a href=" {{path('ficheCheval', {'id': leCheval.id})}} " class="badge badge-success"> {{leCheval.nom}} </a></h3>
                </div>
                <div class="card-body">
                    <th scope="col-4">Description</th>
                    <p class="card-text">{{leCheval.description|raw}}</p>
                </div>
    </div>
        <table class="table table-hover mx-auto">
        <thead>
            <tr>
            <th scope="col-4">Prix</th> 
            <p class="card-text">{{leCheval.prix}}</p>
            </tr>
        </thead>
    </table>

</div>
{% endblock %}