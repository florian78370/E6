<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Club vétérinaire{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/spacelab/bootstrap.min.css">
        <link rel="stylesheet" href="{{asset('css/app.css')}}">
       <script src="https://kit.fontawesome.com/5cb0817a4f.js" crossorigin="anonymous"></script>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %} {% endblock %}
    </head>       
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="{{path('accueil')}}">Accueil</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor02">
    <ul class="navbar-nav mr-auto">
      
    

      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Nos Produits</a>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="{{path('chien')}}">Chien</a>
            <a class="dropdown-item" href="{{path('chat')}}">Chat</a>
          <a class="dropdown-item" href="{{path('cheval')}}">Cheval</a> 
        </div>
      </li>
  {% if app.user and is_granted('ROLE_ADMIN') %}
        
     
         <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
Admin</a>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="{{path('admin_chiens')}}">AdminChien</a>
            <a class="dropdown-item" href="{{path('admin_chats')}}">AdminChat</a>
          <a class="dropdown-item" href="{{path('admin_chevaux')}}">AdminCheval</a> 
        </div>
      </li>
           {% endif %}          
       
                    </ul>
    </ul>
    <form class="form-inline my-2 my-lg-0" method="GET" action="{{ path('search_results') }}">
  <input class="form-control mr-sm-2" type="text" name="query" placeholder="Search" aria-label="Search">
  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>

  <ul class="navbar-nav my-auto">
                    {% if app.user %}
                      
                    
                      <li class="nav-item">
                        <img class="avatar supermini" src="{{ app.user.avatar}}" alt="photo de {{app.user.fullName}}">
                      </li>
                      <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">{{app.user.nom}}</a>
        <div class="dropdown-menu dropdown-menu-right">
          <a class="dropdown-item" href="#">Mon profil</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="{{path('app_logout')}}">Se déconnecter</a> 
        </div>
      </li>
{% else %}
  <li class="nav-item">
          <a class="dropdown-item" href="{{path('login')}}">Se connecter</a> 
      </li>

      <li class="nav-item">
          <a class="dropdown-item" href="{{path('register')}}">S'inscrire</a> 
      </li>
{% endif %}

        
</nav>
        <div class="container">
            {% for label, messages in app.flashes %}
            <div class="alert alert-{{label}} mt-3">
            {% for message in messages %}
                 <p> {{message}}</p>
            {% endfor %}

      {% endfor %}    
      {% block body %}{% endblock %}  
      </div> 
      <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js" integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+" crossorigin="anonymous"></script> 
    {% block javascripts %}
    {% endblock %}

    </body>
</html>

