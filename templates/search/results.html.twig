{% extends 'base.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block body %}
<div class="container">
    <h1>Search Results for "{{ query }}"</h1>

    {# Affichez les r√©sultats de la recherche ici #}
    {% if results is not empty %}
        <ul>
            {% for result in results %}
                <li>{{ result }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No results found.</p>
    {% endif %}
</div>
{% endblock %}
